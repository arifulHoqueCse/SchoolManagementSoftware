@using SchoolApp.Models
@model SchoolApp.Models.Section

@{
    ViewBag.Title = "EditSection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Section</h2>

<div class="row">

    <div class="col-md-12 col-lg-12">
        <section class="panel">
          
            <div class="panel-body">
                <div class="tab-content">
                        <div class="panel-body">
                            @using (Html.BeginForm("UpdateSection", "Section", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                            {
                                Section aSection = (Section)ViewBag.EditSectionInfo;
                                <div class="form-horizontal" role="form">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.SectionName, new { @class = "col-md-2 control-label" })
                                        <div class="col-lg-5">
                                            @Html.TextBoxFor(m => m.SectionName, new { @class = "form-control", @Value = aSection.SectionName })
                                            @Html.ValidationMessageFor(model => model.SectionName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="hidden">
                                        @Html.LabelFor(m => m.SectionId, new { @class = "col-md-2 control-label" })
                                        <div class="col-lg-5">
                                            @Html.TextBoxFor(m => m.SectionId, new { @class = "form-control", @Value = aSection.SectionId })
                                            @Html.ValidationMessageFor(model => model.SectionId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <input type="submit" name="submit" value="submit" class="btn btn-primary" />
                                </div>
                            }
                            <div class="col-lg-8">@ViewBag.SaveSection</div>
                        </div>
                   
                </div>
            </div>
        </section>
    </div>
</div>




