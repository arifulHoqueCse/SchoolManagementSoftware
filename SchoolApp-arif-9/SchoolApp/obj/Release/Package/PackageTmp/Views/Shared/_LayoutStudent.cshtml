@using SchoolApp.Models
@using SchoolApp.Models.DbGateway
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="My class room is a school management software developed by ariful hoque">
    <meta name="author" content="Ariful Hoque">
    <meta name="keyword" content="my class room, ariful hoque, ariful hoque hemal">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>MY CLASS ROOM</title>
    <!-- Bootstrap core CSS -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link href="../../css/bootstrap-reset.css" rel="stylesheet">
    <link href="../../css/site.css" rel="stylesheet" />
    <link href="//cdn.datatables.net/plug-ins/1.10.6/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
    <!--external css-->
    <link href="../../asset/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="../../asset/fileupload/bootstrap-fileupload.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="../../css/style.css" rel="stylesheet">
    <link href="../../css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="../../js/html5shiv.js"></script>
      <script src="../../js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="index.html" class="logo">School<span>AppLication</span></a>
            <!--logo end-->
            @{
                int Userid = Convert.ToInt32(Session["userlevel301"]);
                int SchoolId = Convert.ToInt32(Session["school_id2133"]);
                int UserLabel = Convert.ToInt32(Session["userlevel301"]);
            }
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                           
                            <span class="username">My Profile</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="@Url.Action("TeacherProfile", "Teacher")"><i class=" icon-suitcase"></i>Profile</a></li>
                            <li><a href="@Url.Action("Email", "Teacher")"><i class=" icon-envelope"></i>Email</a></li>
                            @{
                                if (UserLabel != 2 && UserLabel != 3)
                                {
                                    <li><a href="@Url.Action("SchoolSettigs", "Main", new{schoolid=@SchoolId})"><i class="icon-cog"></i>Settings</a></li>
                                }
                            }
                            <li><a href="@Url.Action("Logout", "Main")"><i class="icon-key"></i> Log Out</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a href="@Url.Action("StudentProfile", "Student")">
                            <i class="icon-dashboard"></i>
                            <span>Student Dashboard</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("TeacherListView", "Teacher")">
                            <i class="icon-user"></i>
                            <span>Teacher</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("SubjectView", "Subject")">
                            <i class="icon-align-justify"></i>
                            <span>Subject</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("RoutineView", "ClassRoutine")">
                            <i class="icon-time"></i>
                            <span>Schedule</span>
                        </a>
                    </li>
                    
                    <li class="sub-menu">
                        <a href="@Url.Action("ViewHomeWork", "Student")">
                            <i class="icon-home"></i>
                            <span>My Home Work</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("AttendenceView", "Attendence")">
                            <i class=" icon-user-md"></i>
                            <span>Attendence</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Email", "Student")">
                            <i class="icon-envelope"></i>
                            <span>Email</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class=" icon-file-text"></i>
                            <span>Exam</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("ExamView", "Exam")">Exam List</a></li>
                           
                            <li><a href="@Url.Action("MangeMarkView", "Exam")">Manage Mark</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Library</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("BookView", "Book")">Book</a></li>
                            <li><a href="@Url.Action("EbookView", "Ebook")">EBook</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("NoticeView", "Notice")">
                            <i class=" icon-hospital"></i>
                            <span>Noticeboard</span>
                        </a>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="page-header">
                    @{
                        int schoolId = Convert.ToInt32(Session["school_id2133"]);
                        LoginDbGateway aLoginDbGateway = new LoginDbGateway();
                        School aSchool = new School();
                        aSchool = aLoginDbGateway.GetSchoolInfo(schoolId);
                    }
                    <h3>@aSchool.SchoolName</h3>
                </div>
                @RenderBody()
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2015 &copy; www.signaturesoft.com.bd
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="../../js/jquery.js"></script>
    <script type="text/javascript" src="../../js/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    @RenderSection("myscript", required: false)
    <script src="../../asset/fileupload/bootstrap-fileupload.js"></script>
    <script class="include" type="text/javascript" src="../../js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="../../asset/fullcalendar/bootstrap-datepicker.js"></script>
    <script src="../../js/jquery.scrollTo.min.js"></script>
    <script src="../../js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="../../js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="../../asset/PieChart/jquery.easy-pie-chart.js"></script>
    <script src="../../js/owl.carousel.js"></script>
    <script src="../../js/jquery.customSelect.min.js"></script>
    <script src="../../js/respond.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script class="include" type="text/javascript" src="../../js/jquery.dcjqaccordion.2.7.js"></script>
    <!--common script for all pages-->
    <script src="../../js/common-scripts.js"></script>
    <!--script for this page-->
    <script src="../../js/advanced-form-components.js"></script>
    <script src="../../js/sparkline-chart.js"></script>
    <script src="../../js/easy-pie-chart.js"></script>
    <script src="../../js/count.js"></script>
    <script>
        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });
        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });
    </script>
</body>
</html>


