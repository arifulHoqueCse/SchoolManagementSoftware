@using SchoolApp.Models
@model SchoolApp.Models.Student

@{
    ViewBag.Title = "ClassStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">

    <div class="col-md-12 col-lg-12">
        <div class="panel-body">
            <div class="panel-body">

                <div class="row state-overview">
                    <table class="table table-bordered">
                        @{
                            <tr class="success"><td>Student Name</td><td>Roll Number</td><td>Action</td></tr>
                            List<Student> aStudentList = new List<Student>();
                            aStudentList = (List<Student>)ViewBag.StudentList;
                            foreach (Student aStudent in aStudentList)
                            {
                                <tr><td>@aStudent.StudentName</td><td>@aStudent.RollNumber</td><td><a href="@Url.Action("ManageClassMark", "Exam", new{stuid=@aStudent.StudentId, classid=@aStudent.ClassId})">Create Result</a>/
                                    <a href="@Url.Action("ViewResult", "Exam", new {classid = @aStudent.ClassId })">View Result</a>/ <a href="@Url.Action("EditResult", "Exam", new { stuid = @aStudent.StudentId, classid = @aStudent.ClassId })">Edit Result</a></td></tr>
                            }
                        }
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>

