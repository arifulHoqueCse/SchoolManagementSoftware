@using System.Activities.Expressions
@using SchoolApp.Models
@model SchoolApp.Models.Student

@{
    ViewBag.Title = "StudentProfile";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}
@{
    Student aStudent = new Student();
    aStudent = (Student)ViewBag.SpecificStudent;

}
<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">
                <a href="#">
                    <img src="../../Studentpicture/@aStudent.ImagePath" alt="">
                </a>
                <h1>@Html.Label(aStudent.StudentName)</h1>
                <p>@Html.Label(aStudent.PhoneNumber)</p>
            </div>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="@Url.Action("StudentProfile", "Student")"> <i class="icon-dashboard"></i> Dashboard</a></li>
                <li class="active"><a href="@Url.Action("MyProfile", "Student")"> <i class="icon-user"></i> My Profile</a></li>
                <li><a href="@Url.Action("EditStudentProfile", "Student", new { studentid = @aStudent.StudentId })"> <i class="icon-edit"></i> Edit profile</a></li>
            </ul>
        </section>
    </aside>
    <aside class="profile-info col-lg-9">

        <div class="row state-overview">

            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol red">
                        <a href="@Url.Action("Index", "Teacher")">
                            <img src="../img/icon-teacher.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>Teacher</h4>
                        <p>
                            List
                        </p>
                    </div>
                </section>
            </div>


            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol terques">
                        <a href="@Url.Action("RoutineView", "ClassRoutine")">
                            <img src="../img/icon-shedule.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>Routine</h4>
                        <p>
                            View
                        </p>
                    </div>
                </section>
            </div>

            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol red">
                        <a href="@Url.Action("ExamView", "Exam")">
                            <img src="../img/icon-exam.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>Exam</h4>
                        <p>
                            Routine
                        </p>
                    </div>
                </section>
            </div>
            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol terques">
                        <a href="@Url.Action("EbookView", "EBook")">
                            <img src="../img/icon-ebook.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>E Book</h4>
                        <p>
                            List
                        </p>
                    </div>
                </section>
            </div>
            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol red">
                        <a href="@Url.Action("BookView", "Book")">
                            <img src="../img/icon-book.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>Book</h4>
                        <p>
                            List
                        </p>
                    </div>
                </section>
            </div>


            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol terques">
                        <a href="@Url.Action("Email", "Student")">
                            <img src="../img/icon-email.png" alt="" width="40" height="40">
                        </a>

                    </div>
                    <div class="value">
                        <h4>Query</h4>
                        <p>
                            To Teacher
                        </p>
                    </div>
                </section>
            </div>

            <div class="col-lg-3 col-sm-6">
                <section class="panel">
                    <div class="symbol red">
                        <a href="@Url.Action("NoticeView", "Notice")">
                            <img src="../img/icon-noticeboard.png" alt="" width="40" height="40">
                        </a>
                    </div>
                    <div class="value">
                        <h4>Notice</h4>
                        <p>
                            List
                        </p>

                    </div>
                </section>
            </div>


        </div>
        <div class="panel-heading"> <span class="glyphicon glyphicon-list-alt"></span><b>Notice</b></div>
        <div class="panel-body">
            <div class="row">


                <div class="col-lg-9">
                    @{
                        List<NoticeBoard> noticeBoardList = new List<NoticeBoard>();
                        noticeBoardList = (List<NoticeBoard>)ViewBag.NoticeList;
                        <ul class="notice">
                            @foreach (NoticeBoard noticeBoard in noticeBoardList)
                            {
                                <li class="news-item">@noticeBoard.NoticeTitle <a href="@Url.Action("NoticeDetailsView", "Notice", new{ntid=@noticeBoard.NoticeId})"> .....................Read more</a></li>
                            }
                        </ul>
                    }
                </div>

            </div>
        </div>



    </aside>
</div>
@section myscript
{
    <script src="../../asset/tickerjs/jquery.bootstrap.newsbox.min.js"></script>
    <script>
        $(function () {
            $(".notice").bootstrapNews({
                newsPerPage: 4,
                autoplay: true,
                pauseOnHover: true,
                navigation: false,
                direction: 'down',
                newsTickerInterval: 2500,
                onToDo: function () {
                    //console.log(this);
                }
            });
        });
    </script>

}