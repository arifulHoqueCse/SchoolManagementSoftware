@using SchoolApp.Models.View
@model SchoolApp.Models.SuperAdmin

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="My class room is a school software developed by Md. Ariful hoque hemal and powerd by software text">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="my class room, ariful hoque">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>MY CLASS ROOM</title>
    <!-- Bootstrap core CSS -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link href="../../css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="../../asset/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="../../css/style.css" rel="stylesheet">
    <link href="../../css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="../../js/html5shiv.js"></script>
    <script src="../../js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-body">
    <div class="container">
        <div class="login-wrap">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <section class="panel">
                        <h4>Super Admin Panel</h4>
                        <a href="@Url.Action("Logout", "Main")" class="btn btn-warning">Logout</a>
                    </section>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <section class="panel">
                        <table class="table table-bordered table-hover">
                            <tr><td>School Name</td><td>School Address</td></tr>
                            @{
                                List<SchoolList> aSchoolLists = new List<SchoolList>();
                                aSchoolLists = (List<SchoolList>)ViewBag.SchoolList;
                                foreach (SchoolList aSchoolList in aSchoolLists)
                                {
                                    <tr><td><a href="@Url.Action("GotoSchoolPanle", "SuperAdmin", new{schoolid=@aSchoolList.SchoolId, userid=@aSchoolList.UserId, userlabel=@aSchoolList.Userlabel})">@aSchoolList.SchoolName</a></td><td>@aSchoolList.SchoolAddress</td></tr>
                                }
                            }
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="../../js/jquery.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>



