@using SchoolApp.Models
@model SchoolApp.Models.Teacher

@{
    ViewBag.Title = "TeacherCv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Teacher aTeacher = new Teacher();
    aTeacher = (Teacher)ViewBag.SpecificTeacher;

}


<h2>Cv Of @aTeacher.TeacherName</h2>


<script language="JavaScript">
    function printSpecial() {
        var prtContent = document.getElementById("some");
        var WinPrint = window.open('', '', 'left=0,top=0,width=400,height=900,toolbar=0,scrollbars=0,status=0');
        WinPrint.document.write(prtContent.innerHTML);
        WinPrint.document.close();
        WinPrint.focus();
        WinPrint.print();
        WinPrint.close();
    }

</script>
<div class="ProfileCv">
    <div id="some">
        <img style="height: 200px;width: 200px" src="../../Teacherprofile/@aTeacher.ImagePath" alt="">
        <br /><br /><br />
        <table>
            <tr>
                <td>Name</td>
                <td><span>:</span>@aTeacher.TeacherName</td>
            </tr>
           
          

            <tr>
                <td>Employee Code</td>
                <td><span>:</span>@aTeacher.EmployeeCode</td>
            </tr>
          
          
            <tr>
                <td>Date Of Birth</td>
                <td><span>:</span>@aTeacher.BirthDay</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td><span>:</span>@aTeacher.Sex</td>
            </tr>
            <tr>
                <td>Religion</td>
                <td><span>:</span>@aTeacher.Religion</td>
            </tr>
            <tr>
                <td>Blood Group</td>
                <td><span>:</span>@aTeacher.BloodGroup/td>
            </tr>
            <tr>
                <td>Contact Address</td>
                <td><span>:</span>@aTeacher.ContactAddress</td>
            </tr>
            <tr>
                <td>Phone Number</td>
                <td><span>:</span>@aTeacher.PhoneNumber</td>
            </tr>
            <tr>
                <td>Email</td>
                <td><span>:</span>@aTeacher.Email</td>
            </tr>

        </table>
    </div>


    <div class="text-center invoice-btn">
        <a class="btn btn-info btn-lg" href="@Url.Action("TeacherCvPrint", "Teacher", new { id = aTeacher.TeacherId })">Download</a>

        <a class="btn btn-info btn-lg" href="javascript:void(printSpecial())"><i class="icon-print"></i> Print </a>
    </div>

</div>

