@using SchoolApp.Models
@model SchoolApp.Models.Teacher

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Teacher aTeacher = new Teacher();
    aTeacher = (Teacher)ViewBag.SpecificTeacher;

}
<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">
                <a href="#">
                    <img src="../../Teacherprofile/@aTeacher.ImagePath" alt="">
                </a>
                <h1>@Html.Label(aTeacher.TeacherName)</h1>
                <p>@Html.Label(aTeacher.PhoneNumber)</p>
            </div>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="@Url.Action("TeacherProfile", "Teacher")"> <i class="icon-user"></i> My Dashboard</a></li>
                <li class="active"><a href="@Url.Action("MyProfile", "Teacher")"> <i class="icon-user"></i> My Profile</a></li>
                <li><a href="@Url.Action("EditTeacher", "Teacher", new { id = @aTeacher.TeacherId })"> <i class="icon-edit"></i> Edit profile</a></li>
            </ul>
        </section>
    </aside>
    <aside class="profile-info col-lg-9">
        <section class="panel">
            <div class="panel-body bio-graph-info">
                <h1>Bio Graph</h1>
                <div class="row">
                    <div class="bio-row">
                        <p><span>Name </span>: @aTeacher.TeacherName</p>
                    </div>
                    <div class="bio-row">
                        <p><span>BirthDay </span>: @aTeacher.BirthDay</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Sex </span>: @aTeacher.Sex</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Religion </span>: @aTeacher.Religion</p>
                    </div>
                    <div class="bio-row">
                        <p><span>BloodGroup </span>: @aTeacher.BloodGroup</p>
                    </div>
                    <div class="bio-row">
                        <p><span>ContactAddress </span>: @aTeacher.ContactAddress</p>
                    </div>
                    <div class="bio-row">
                        <p><span>PhoneNumber </span>: @aTeacher.PhoneNumber</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Email </span>: @aTeacher.Email</p>
                    </div>
                </div>
            </div>
        </section>
        
    </aside>
</div>
<!-- page end-->
<!-- js placed at the end of the document so the pages load faster -->
<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="js/jquery.dcjqaccordion.2.7.js"></script>
<script src="js/jquery.scrollTo.min.js"></script>
<script src="js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="assets/jquery-knob/js/jquery.knob.js"></script>
<script src="js/respond.min.js"></script>
<!--common script for all pages-->
<script src="js/common-scripts.js"></script>
