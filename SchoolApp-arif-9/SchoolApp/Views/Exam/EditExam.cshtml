@using SchoolApp.Models
@model SchoolApp.Models.Exam

@{
    ViewBag.Title = "EditExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-12 col-lg-12">
        <section class="panel">
            <header class="panel-heading tab-bg-dark-navy-blue ">
                
            </header>
            <div class="panel-body">
                <div class="tab-content">
                   
                   
                    <header class="panel-heading">
                        Exam Entry Form
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm("UpdateExam", "Exam", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                        {
                            Exam aExam = (Exam)ViewBag.EditExamInfo;
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal" role="form">
                                  
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Value = aExam.Name })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <input type="hidden" name="examid" value="@ViewBag.Examid"/>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Exam Date</label>
                                    <div class="col-md-3 col-xs-11">
                                        <div data-date-viewmode="years" data-date-format="dd/mm/yyyy" data-date="12-02-2012" class="input-append date dpYears">
                                            <input type="text" readonly="" size="16" class="form-control" name="examdate" id="examdate" required>
                                            <span class="input-group-btn add-on">
                                                <button class="btn btn-danger" type="button"><i class="icon-calendar"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
                                    <div class="col-lg-5">
                                        @Html.TextBoxFor(m => m.Comment, new { @class = "form-control", @Value = aExam.Comment })
                                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <input type="submit" name="submit" value="submit" />
                            </div>
                        }
                   
                    </div>
                </div>
                <div class="col-lg-8">@ViewBag.SuccessAlert</div>
            </div>

        </section>
    </div>
</div>
